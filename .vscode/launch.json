{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "mydgb",
      "type": "cppdbg",
      "request": "launch",
      "args": ["2", "800", "200", "200"],
      "stopAtEntry": false,
      "externalConsole": false,
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/philo_bonus/philo_bonus",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build",
    }
  ]
}